{
  "name": "mcp-universal-db",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start-stdio": "npm run src/index.ts --transport stdio",
    "start-sse": "npm run src/index.ts --transport sse",
    "start-http": "npm run src/index.ts --transport http",
    "debug-http": "ts-node-esm src/index.ts --transport http",
    "dev": "npm --watch src/index.ts",
    "test": "npm test",
    "test:db": "npm test tests/db.test.ts",
    "test:tools": "npm test tests/tools.test.ts",
    "test:watch": "npm test --watch",
    "build": "npm build --outfile=dist/run.js --target=node ./src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^24.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3",
    "pg": "^8.16.3"
  }
}
